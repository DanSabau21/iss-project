         <Font size="18.0" />
      </font>
   </Label>
   <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="76.0" layoutY="343.0" prefHeight="18.0" prefWidth="471.0" text="Label" textAlignment="CENTER" textFill="#fc0000" visible="false" />
